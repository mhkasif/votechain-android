<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:isScrollContainer="true">

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rawImage1"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    tools:src="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/nfiqText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFIQ:" />

                <ImageView
                    android:id="@+id/processedImage1"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rawImage2"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/nfiqText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFIQ:" />

                <ImageView
                    android:id="@+id/processedImage2"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />

            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rawImage3"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/nfiqText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFIQ:" />

                <ImageView
                    android:id="@+id/processedImage3"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />
            </TableRow>

            <TableRow
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/rawImage4"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/nfiqText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NFIQ:" />

                <ImageView
                    android:id="@+id/processedImage4"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@android:drawable/arrow_up_float" />
            </TableRow>
        </TableLayout>

    </ScrollView>

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/livenessText"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Liveness:"
        app:layout_constraintBottom_toTopOf="@+id/finishButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>